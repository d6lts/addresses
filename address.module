define('ADDRESS_PATH' , drupal_get_path('module', 'address'));

/**
 * The address fields can be: displayed, required, hidden or not
 * used at all
 */
define('ADDRESS_FIELD_NONE',      0);
define('ADDRESS_FIELD_SHOW',      1);
define('ADDRESS_FIELD_REQUIRED',  2);
define('ADDRESS_FIELD_HIDDEN',    3);

/**
 * Implementation of hook_menu().
 */
function address_menu() {
  $items['admin/settings/address'] = array(
    'description'     => t('Settings for Address module'),
    'file'            => 'address.inc',
    'page callback'   => 'drupal_get_form',
    'page arguments'  => array('_address_admin'),
    'title'           => t('Address'),
  );

  /// @todo use the correct ACCESS PERMISSION
  $items['admin/settings/address/autocomplete'] = array(
    'access'          => TRUE,
    'file'            => 'address.inc',
    'page callback'   => '_address_autocomplete',
    'type'            => MENU_CALLBACK
  );

  return $items;
}

/**
 * Implementation of hook_theme().
 */
function address_theme() {
  return array(
    'address' => array(
      'arguments' => array('address', 'hide'),
      'file'      => 'address.inc',
    ),
    'address_form' => array(
      'arguments' => array('form'),
      'file'      => 'address.inc',
    ),
    'address_address_singleline' => array(
      'arguments' => array('addresses'),
      'file'      => 'address.inc',
    ),
  );
}
